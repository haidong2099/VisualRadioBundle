{
	"name": "guave/visualradio-bundle",
	"description": "Visual Radio Field for Contao 4.9+",
	"type": "contao-bundle",
	"license": "ISC",
	"authors": [
		{
			"name": "Christopher Stadler",
			"email": "christopher.stadler@guavestudios.com",
			"homepage": "https://github.com/guavestudios"
		}
	],
	"require": {
		"php": "^7.4 || ^8.0",
		"contao/core-bundle": "^4.13"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest"
	},
	"conflict": {
		"contao/core": "*",
		"contao/manager-plugin": "<2.0 || >=3.0"
	},
	"autoload": {
		"psr-4": {
			"Guave\\VisualRadioBundle\\": "src/"
		},
		"classmap": [
			"contao/"
		],
		"exclude-from-classmap": [
			"contao/config/",
			"contao/dca/",
			"contao/languages/",
			"contao/templates/"
		]
	},
	"config": {
		"allow-plugins": {
			"contao-components/installer": true,
			"contao/manager-plugin": true,
			"php-http/discovery": false
		}
	},
	"extra": {
		"contao-manager-plugin": "Guave\\VisualRadioBundle\\ContaoManager\\Plugin"
	},
	"support": {
		"issues": "https://github.com/guavestudios/VisualRadioBundle/issues",
		"source": "https://github.com/guavestudios/VisualRadioBundle"
	}
}
